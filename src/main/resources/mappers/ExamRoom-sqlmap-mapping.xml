<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lj.exam.dal.daointerface.ExamRoomDAO">
    <resultMap id="RM-EXAMINE-ROOM" type="ExamRoom">
    	<result property="id" column="id"  jdbcType="INTEGER"/>
        <result property="province" column="Province" jdbcType="VARCHAR"/>
        <result property="city" column="City" jdbcType="VARCHAR"/>
        <result property="district" column="District" jdbcType="VARCHAR"/>
        <result property="examineRoomName" column="ExamineRoom_Name" jdbcType="VARCHAR"/>
        <result property="examineRoomCode" column="ExamineRoom_Code" jdbcType="VARCHAR" />
        <result property="invigilatorName" column="Invigilator_Name" jdbcType="VARCHAR"/>
        <result property="invigilatorTel" column="Invigilator_Tel" jdbcType="VARCHAR"/>
    </resultMap>


    <select id="queryExamRoom" resultMap="RM-EXAMINE-ROOM" >
    <![CDATA[
        select id, Province, City, District, ExamineRoom_Name, ExamineRoom_Code, 
        Invigilator_Name, Invigilator_Tel from exam_room
    ]]>
    </select>
	
	<select id="queryByExamineRoomCode" parameterType="String"
		resultMap="RM-EXAMINE-ROOM">
		select id, Province, City, District, ExamineRoom_Name, ExamineRoom_Code, 
        Invigilator_Name, Invigilator_Tel from exam_room
		where ExamineRoom_Code = #{examineRoomCode,jdbcType=VARCHAR}
	</select>
</mapper>